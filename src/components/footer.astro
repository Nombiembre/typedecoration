---
import { getLangFromUrl, useTranslations } from "~/i18n/utils";
import { getRelativeLocaleUrl } from "astro:i18n";
import type { NavItem } from "~/types";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const links: Array<NavItem> = [
  {
    title: t("footer.support"),
    url: "/support",
  },
  {
    title: t("footer.privacy"),
    url: "/privacy",
  },
  {
    title: t("footer.terms"),
    url: "/terms",
  },
];
---

<footer class="relative z-50 mt-auto bg-black text-gray-50">
  <div
    class="container flex flex-col items-center gap-4 text-xs md:flex-row md:justify-between md:gap-0 md:text-sm"
  >
    <div>
      <span>Â© {new Date().getFullYear()} TypeDecoration</span>
    </div>
    <ul class="flex flex-col items-center gap-2 md:flex-row md:gap-6">
      {
        links.map((link) => (
          <li>
            <a class="line-clamp-1" href={getRelativeLocaleUrl(lang, link.url)}>
              {link.title}
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</footer>
