---
import { getLangFromUrl, useTranslations } from "~/i18n/utils";

interface Data {
  title: string;
  res: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const data: Array<Data> = [
  {
    title: t("faq.1.title"),
    res: t("faq.1.body"),
  },
  {
    title: t("faq.2.title"),
    res: t("faq.2.body"),
  },
  {
    title: t("faq.3.title"),
    res: t("faq.3.body"),
  },
  {
    title: t("faq.4.title"),
    res: t("faq.4.body"),
  },
];
---

<section class="relative z-20 bg-accent-green py-24 text-accent-green-700">
  <div class="container mx-auto max-w-xl space-y-6">
    <h2 class="text-center font-bricolage font-bold text-2xl">FAQs</h2>
    <ul>
      {
        data.map(({ title, res }, i) => (
          <li
            class={`faq-item || group cursor-pointer py-3 md:py-6 space-y-4 md:text-[25px] ${i === 0 ? "" : "border-t border-default"}`}
          >
            <div class="flex items-center gap-4 md:gap-8">
              <svg
                width="50px"
                height="50px"
                viewBox="0 0 45.402 45.402"
                xml:space="preserve"
                class="g size-3 fill-accent-green-700 transition-all duration-700"
              >
                <g>
                  <path d="M41.267,18.557H26.832V4.134C26.832,1.851,24.99,0,22.707,0c-2.283,0-4.124,1.851-4.124,4.135v14.432H4.141   c-2.283,0-4.139,1.851-4.138,4.135c-0.001,1.141,0.46,2.187,1.207,2.934c0.748,0.749,1.78,1.222,2.92,1.222h14.453V41.27   c0,1.142,0.453,2.176,1.201,2.922c0.748,0.748,1.777,1.211,2.919,1.211c2.282,0,4.129-1.851,4.129-4.133V26.857h14.435   c2.283,0,4.134-1.867,4.133-4.15C45.399,20.425,43.548,18.557,41.267,18.557z" />
                </g>
              </svg>
              <h3 class="font-bricolage font-semibold">{title}</h3>
            </div>
            <p class="max-h-0 overflow-hidden px-9 transition-all duration-500 md:px-12">
              {res}
            </p>
          </li>
        ))
      }
    </ul>
  </div>
</section>

<style>
  .faq-item p {
    transition: max-height 0.5s linear;
  }

  .faq-item-expanded {
    & svg {
      @apply rotate-[135deg];
    }

    & p {
      transition: max-height 2s linear;
      @apply max-h-96 scale-100  opacity-100;
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    const faqItems = document.querySelectorAll(
      ".faq-item",
    ) as NodeListOf<HTMLElement>;

    faqItems.forEach((faq) => {
      faq.addEventListener("click", () => {
        faq.classList.toggle("faq-item-expanded");
      });
    });
  });
</script>
